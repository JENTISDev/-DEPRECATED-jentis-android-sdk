<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:text="Main Screen"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/configButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/configButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="22dp"
        android:text="Config Screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/debugButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:text="Debug Screen"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/configButton" />

    <Button
        android:id="@+id/consentButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:text="Consent Screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/debugButton" />

    <Button
        android:id="@+id/trackingButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:text="Tracking Screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/consentButton" />
 <Button
        android:id="@+id/productSampleButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:text="Product Screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trackingButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
